{
  "version": "0.2.0",
  "configurations": [
    
    {
      "name": "BrightScript Debug: Launch",
      "type": "brightscript",
      "request": "launch",
      "host": "${promptForHost}",
      "password": "${promptForPassword}",
      "rootDir": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Node: Nodemon",
      "processId": "${command:PickProcess}",
      "restart": true,
      "protocol": "inspector",
    },
  ]
}